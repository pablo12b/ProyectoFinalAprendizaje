# =============================================================================
# Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# OpenAI (REQUIRED for LLM functionality)
# -----------------------------------------------------------------------------
OPENAI__API_KEY=sk-your-openai-api-key-here
OPENAI__API_KEY_ASSISTANT=sk-your-openai-api-key-here

# -----------------------------------------------------------------------------
# ElevenLabs (REQUIRED for Text-to-Speech audio generation)
# -----------------------------------------------------------------------------
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# -----------------------------------------------------------------------------
# Anthropic (Optional - for Claude models)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# -----------------------------------------------------------------------------
# Database (PostgreSQL with pgvector extension)
# -----------------------------------------------------------------------------
PG_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/app
POOLER_PG_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/app

# -----------------------------------------------------------------------------
# Redis/Valkey (Cache)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6381/0

# -----------------------------------------------------------------------------
# JWT Authentication (Local)
# -----------------------------------------------------------------------------
JWT_SECRET=your-secret-key-must-be-minimum-64-characters-long-change-this-value
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
GRAPHQL_URL=http://localhost:8000/graphql
ENVIRONMENT=development
PORT=8000
LOG_LEVEL=DEBUG
